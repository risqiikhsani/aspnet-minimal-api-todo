{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "Database": "Data Source=Data.db"
  },
  "Jwt": {
    "Key": "verySecretKeyWhichShouldBeLongAndSecure",
